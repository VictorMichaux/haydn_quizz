<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicons -->
    <link href="img/favicon.png" rel="icon">
    <link href="img/apple-touch-icon.png" rel="apple-touch-icon">

    {% block stylesheets %}
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Ruda:400,900,700" rel="stylesheet">

        <!-- Bootstrap CSS File -->
        <link href={{ asset('lib/bootstrap/css/bootstrap.min.css') }} rel="stylesheet">

        <!-- Libraries CSS Files -->
        <link href={{ asset('lib/font-awesome/css/font-awesome.min.css') }} rel="stylesheet">
        <link href={{ asset('lib/animations/animations.css') }} rel="stylesheet">
        <link href={{ asset('lib/hover-pack/hover-pack.css') }} rel="stylesheet">

        <!-- Main Stylesheet File -->
        <link href={{ asset('css/style.css') }} rel="stylesheet">
        <link href={{ asset('css/colors/color-74c9be.css') }} rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <!-- =======================================================
      Template Name: Marco
      Template URL: https://templatemag.com/marco-bootstrap-agency-template/
      Author: TemplateMag.com
      License: https://templatemag.com/license/
    ======================================================= -->
</head>

<body>
<div id="cta01">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>Tu es connectée en tant que {{ app.user.email }}.</h2>
                <a href="{{ path('app_logout') }}" type="button" class="btn btn-cta btn-lg">Se déconnecter</a>
                {% if app.request.attributes.get('_route') != "quizz" %}
                    <br>
                    <a href="{{ path('quizz') }}" type="button" class="btn btn-cta btn-lg">Retour aux questions</a>
                {% endif %}
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
{% block body %}
{% endblock %}
</body>
</html>
